<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.bottomsheet.CategoryBottomSheetFragment"
    android:id="@+id/my_bottomSheet">


    <ImageView
        android:scaleType="fitCenter"
        tools:src="@tools:sample/backgrounds/scenic"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/categpry_img"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/categpry_img"
        app:layout_constraintStart_toEndOf="@id/categpry_img"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:text="SeaFood"
            android:id="@+id/categoryName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:ellipsize="end"
            android:maxLines="3"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text="SeaFood"
            android:id="@+id/categoryDesc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>